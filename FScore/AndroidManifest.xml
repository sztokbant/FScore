<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.net.du.fscore"
    android:versionCode="4"
    android:versionName="1.0-beta4" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/fscore"
        android:label="@string/app_name" >
        <activity
            android:name=".activity.MatchList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SingleMatch"
            android:label="Match" />
        <activity
            android:name=".activity.SingleRound"
            android:label="Round"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".activity.RoundBetsReader"
            android:label="Round Bets"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".activity.RoundWinsReader"
            android:label="Round Wins"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>